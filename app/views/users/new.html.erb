<h1>Signup to Facespace</h1>

<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<div class="well well-sm">
			<%= form_for User.new, url: '/signup' do |f| %>
				<fieldset>
					<div class="form-group">
						<%= f.label :email, nil, class: 'col-md-3' %>
						<div class="col-md-9"><%= f.email_field :email %></div>
					</div>
					<div class="form-group">
						<%= f.label :name, nil, class: 'col-md-3' %>
						<div class="col-md-9"><%= f.text_field :name %></div>
					</div>
					<div class="form-group">
						<%= f.label :bio, nil, class: 'col-md-3' %>
						<div class="col-md-9"><%= f.text_area :bio, :cols => "45", :rows => "4" %></div>
					</div>
					<div class="form-group">
						<%= f.label :password, nil, class: 'col-md-3' %>
						<div class="col-md-9"><%= f.password_field :password %></div>
					</div>
					<div class="form-group">
						<%= f.label :password_confirmation, nil, class: 'col-md-3' %>
						<div class="col-md-9"><%= f.password_field :password_confirmation %></div>
					</div>
					<div class="form-group">
						<%= f.label "Image", class: 'col-md-3-offset-4' %>				
						<div class="col-md-9"><%= f.file_field :image %></div>
					</div>
  						<%= f.submit 'Submit', class: 'col-md-3-offset-4'  %>					
  					
					<div class="form-group">
					  <div class="col-md-12 text-right">
					    <%= f.submit 'Sign Up!', class: "btn btn-large btn-primary" %>
					  </div>
					</div>
				</fieldset>				
			<% end %>
		</div>
	</div>
</div>

