<h1><%= @user.name %></h1>
<p><%= @user.email %></p>
<br/>
<em>
	<%= @user.bio %>
</em>
<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<div class="well well-sm">
			<%= form_for Wallpost.new, url: '/make_post' do |f| %>
				<fieldset>					
					<%= f.hidden_field :user_id, value: @user.id %>
					<div class="form-group">
						<label class="col-md-3 control-label" for="name"><%= f.label :post_comment %></label>
						<div class="col-md-9"><%= f.text_area :post_comment, :cols => "45", :rows => "4"%></div>
					</div>					
					<div class="form-group">
					  <div class="col-md-12 text-right">
						  <%= f.submit "Post", class: "btn btn-large btn-primary" %>
					  </div>
					</div>
				</fieldset>				
			<% end %>
		</div>
		<div class="well well-sm">
			<% @wallposts.each do |wallpost| %>
				<div>
					<strong> <%= wallpost.post_comment %> </strong> 
				</div>
				<div class="text-right">
					<small><%= wallpost.created.strftime("%d %b %Y %l:%M %p") %></small>
				</div>
				<br/>
				<br/>
			<% end %>
		</div>
	</div>
	<div class="col-md-3">
		<%= link_to "Request Friend", {:action => :befriend }, {:method => :put } %>
		<br/>
		<h3>Friends</h3>
		<ul>
			<% @friends.each do |friend| %>
			<li><%= friend.name %></li>
			<% end %>
		</ul>
	</div>
<div>
	<img src="<%= @user.image %>" />
</div>
</div>

