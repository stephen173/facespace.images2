<h1>Login to Facespace</h1>

<div class="row">
		<div class="col-md-6">
		<div class="well well-sm">
			<%= form_tag '/login' do  %>
				<fieldset>
					Where Friends Meet
				</fieldset>				
			<% end %>
		</div>
	</div>

	<div class="col-md-6 col-md-offset-3">
		<div class="well well-sm">
			<%= form_tag '/login' do  %>
				<fieldset>
					<div class="form-group">
						<%= label_tag :email, nil, class: 'col-md-3' %>
						<div class="col-md-9"><%= email_field_tag :email %></div>
					</div>
					<div class="form-group">
						<%= label_tag :password, nil, class: 'col-md-3' %>
						<div class="col-md-9"><%= password_field_tag :password %></div>
					</div>
					<div class="form-group">
					  <div class="col-md-12">
					    <%= submit_tag 'Login', class: "btn btn-large btn-primary" %>
						<br/><br/>
						New User? <%=link_to('Sign up Now!', signup_path)%>
					  </div>
					</div>
				</fieldset>				
			<% end %>
		</div>
	</div>
</div>